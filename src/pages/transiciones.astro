---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import Layout from "../layouts/Layout.astro";


---
<Layout>
    <Header/>
    <section>
        <div class="titulo">
            <h1>Transiciones con botones <div class="linea"></div></h1>
        </div>
        <div class="botones">
            <div class="cuadro c1"><button class="boton boton1">Ejemplo</button></div>
            <div class="cuadro c2"><button class="boton boton2">Ejemplo</button></div>
            <div class="cuadro c3"><button class="boton boton3">Ejemplo</button></div>
            <div class="cuadro c4"><button class="boton boton4">Ejemplo</button></div>
            <div class="cuadro c5"><button class="boton boton5">Ejemplo</button></div>
            <div class="cuadro c6"><button class="boton boton6">Ejemplo</button></div>
            <div class="cuadro c7"><button class="boton boton7">Ejemplo</button></div>
            <div class="cuadro c8"><button class="boton boton8">Ejemplo</button></div>
            <div class="cuadro c9"><button class="boton boton9">Ejemplo</button></div>
            <div class="cuadro c10"><button class="boton boton10">Ejemplo</button></div>
            <div class="cuadro c11"><button class="boton boton11">Ejemplo</button></div>
            <div class="cuadro c12"><button class="boton boton12">Ejemplo</button></div>
        </div>
    </section>
    <Footer/>
</Layout>

<style lang="scss">
    .boton1:hover {
        transform: scale(1.2);
    }
    .boton2:hover {
        transform: scale(0.8);
    }
    .boton3:hover {
        transform: translateY(-6px);
    }
    .boton4:hover {
        transform: translateY(6px);
    }
    .boton5:hover {
        background-color: black;
        color: white;
    }
    .boton6:hover {
        border-radius: 30px;
    }
    .boton7:hover {
        letter-spacing: 3px;
    }
    .boton8:hover {
        box-shadow: 0px 0px 10px black;
    }
    .boton9:hover {
        
    }
    .boton10:hover {
        
    }
    .boton11:hover {
        
    }
    .boton12:hover {
        
    }
    .c1 {
        animation: aparecer 0.5s 0.5s 1 ease-in forwards;
    }
    .c2 {
        animation: aparecer 0.5s 0.55s 1 ease-in forwards;
    }
    .c3 {
        animation: aparecer 0.5s 0.6s 1 ease-in forwards;
    }
    .c4 {
        animation: aparecer 0.5s 0.65s 1 ease-in forwards;
    }
    .c5 {
        animation: aparecer 0.5s 0.7s 1 ease-in forwards;
    }
    .c6 {
        animation: aparecer 0.5s 0.75s 1 ease-in forwards;
    }
    .c7 {
        animation: aparecer 0.5s 0.8s 1 ease-in forwards;
    }
    .c8 {
        animation: aparecer 0.5s 0.85s 1 ease-in forwards;
    }
    .c9 {
        animation: aparecer 0.5s 0.9s 1 ease-in forwards;
    }
    .c10 {
        animation: aparecer 0.5s 0.95s 1 ease-in forwards;
    }
    .c11 {
        animation: aparecer 0.5s 1s 1 ease-in forwards;
    }
    .c12 {
        animation: aparecer 0.5s 1.05s 1 ease-in forwards;
    }


    .boton {
        padding: 10px;
        border: 0;
        border-radius: 10px;
        font-size: 1.1em;
        font-weight:700;
        transition: all ease .55s;
        cursor: pointer;
        transform: translateY(-10px);
    }
    .cuadro {
        width: 150px;
        height: 150px;
        margin: 50px;
        display: flex;
        background-color: #6b9bd25d;
        justify-content: center;
        align-items: center;
        box-shadow: inset 0px 0px 10px rgba(0, 0, 0, 0.588);
        opacity: 0;
    }
    .botones {
        height: 100%;
        width: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-wrap: wrap;
    }
    .linea {
            height: 5px;
            width: 100%;
            background-color: #6B9BD2;
        }
    .titulo {
        height: 15%;
        width: 80%;
        color: #575880;
        font-size: 40px;
    }
    section {
        height: auto;
        display: flex;
        align-items: center;
        flex-direction: column;
    }
    @keyframes aparecer {
        from {
            transform: translateY(-10px);
            opacity: 0;
        }
        to {
            transform: translateY(0);
            opacity: 1;
        }
    }
    @media only screen and (max-width: 426px) {
        .titulo {
            font-size: 1.2em;
        }
    }
</style>