            height: 100vh;
            width: 100%;
            background-color: #FFFFFF;
            position: fixed;
            top: 100vh;
            animation: salir 1.5s 1.7s 1 ease-in forwards;
        }
        @keyframes salir {
            to {
                top: 100%;
            }
        }
    </style>