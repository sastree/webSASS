    <style>
        /* 
        color 1: #F1F5F9
        color 2: #6B9BD2
        color 3: #FFFFFF
        color 4: #575880
        */
        .cont {
            width: 100%;
            height: 100%;
        }
        * {
            margin: 0;
            padding: 0;
        }
        .a{
            height: 100vh;
            width: 100%;
            background-color: #6B9BD2;
            position: fixed;
            top: 100vh;
            animation: salir 1s 1s 1 ease-in forwards;
        }
        .b{
            height: 100vh;
            width: 100%;
            background-color: #F1F5F9;
            position: fixed;
            top: 100vh;
            animation: salir 1.1s 1.1s 1 ease-in forwards;
        }
        .c{
            height: 100vh;
            width: 100%;
            background-color: #575880;
            position: fixed;
            top: 100vh;
            animation: salir 1.2s 1.2s 1 ease-in forwards;
        }
        .d{
            height: 100vh;
            width: 100%;
            background-color: #FFFFFF;
            position: fixed;
            top: 100vh;
            animation: salir 1.3s 1.3s 1 ease-in forwards;
        }
        .a2{
            height: 100vh;
            width: 100%;
            background-color: #6B9BD2;
            position: fixed;
            top: 100vh;
            animation: salir 1.4s 1.4s 1 ease-in forwards;
